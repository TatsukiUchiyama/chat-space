.chat-main__message-list__user-area
  .chat-main__message-list__user-area--name
    = message.user.nickname
  .chat-main__message-list__user-area--date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.chat-main__message-list__message-area
  - if message.body.present?
    .chat-main__message-list__message-area--text
      = message.body
  = image_tag message.image.url, class: "message_image" if message.image.present?