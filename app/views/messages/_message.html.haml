.chat-main__message-list__content{data: {message: {id: message.id}}}
  .chat-main__message-list__content__user-area
    .chat-main__message-list__content__user-area--name
      = message.user.nickname
    .chat-main__message-list__content__user-area--date
      = message.created_at.strftime("%Y/%m/%d  %H:%M")
  .chat-main__message-list__content__message-area
    - if message.body.present?
      .chat-main__message-list__content__message-area--text
        = message.body
    = image_tag message.image.url, class: "message_image" if message.image.present?